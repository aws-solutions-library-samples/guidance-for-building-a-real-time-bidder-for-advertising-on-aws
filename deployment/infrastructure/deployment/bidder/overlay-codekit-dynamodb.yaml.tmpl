---
resources:
  limits: null
replicaCount: 24
# autogenerated Kinesis stream name (see: chart)
useBenchmarkKinesis: true
awsRegion: ${AWS_REGION}
nodeSelector:
  pool: application
config:
  LOG_LEVEL: "debug"
  GOMAXPROCS: "60"
  KINESIS_DISABLE: "false"
  DYNAMODB_ENABLE_LOW_LEVEL: "true"
  DYNAMODB_LOW_LEVEL_MAX_CONNECTIONS: "1024"
  DYNAMODB_DEVICE_TABLE: "${DYNAMODB_TABLENAME_PREFIX}dev"
  DYNAMODB_AUDIENCE_TABLE: "${DYNAMODB_TABLENAME_PREFIX}audience_campaigns"
  DYNAMODB_CAMPAIGN_TABLE: "${DYNAMODB_TABLENAME_PREFIX}campaign_budget"
  DYNAMODB_BUDGET_TABLE: "${DYNAMODB_TABLENAME_PREFIX}budget"
  AWS_REGION: "${AWS_REGION}"
  AWS_DEFAULT_REGION: "${AWS_REGION}"
  DYNAMODB_ENDPOINT: "https://dynamodb.${AWS_REGION}.amazonaws.com."
  BUDGET_SYNC_PERIOD_SECONDS: "10s"
  KINESIS_STREAM_NAME: "${APPLICATION_STACK_NAME}-bids-benchmark"