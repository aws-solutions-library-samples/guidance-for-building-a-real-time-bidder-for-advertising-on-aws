---
replicaCount: 1
# autogenerated Kinesis stream name (see: chart)
useBenchmarkKinesis: true
awsRegion: ${AWS_REGION}

nodeSelector:
  pool: application

config:
  AWS_REGION: "${AWS_REGION}"
  AWS_DEFAULT_REGION: "${AWS_REGION}"
  DATABASE_CLIENT: "aerospike"
  AEROSPIKE_WARM_UP_COUNT: "128"
  AEROSPIKE_GET_PRIORITY: "1"
  AEROSPIKE_CLIENT_IDLE_TIMEOUT: "55s"
  AEROSPIKE_CLIENT_TIMEOUT: "30s"
  AEROSPIKE_CLIENT_CONNECTION_QUEUE_SIZE:  "128"

  AEROSPIKE_HOST: "aerospike-aerospike"
  AEROSPIKE_NAMESPACE: "bidder"
  AEROSPIKE_PORT: "3000"
  KINESIS_DISABLE: "false"
  KINESIS_STREAM_NAME: "${APPLICATION_STACK_NAME}-bids-benchmark"